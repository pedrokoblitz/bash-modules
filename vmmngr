# appfunc
# 3R Studio

3R_ec2_main_sync() {

	local KEY=$3R_KEY
	local SECRET=$3R_SECRET
	local PATH=$1
	local S3NAME=$2

	ec2_main_sync $KEY $SECRET $PATH $S3NAME
}

3R_s3_main_sync() {

	local PATH=$1
	local S3NAME=$2

	# boto-rsync -aAKIAJSPFIMI6TEUUHLRA -sjK1TlLcfC4lYiNo6SBCWc5YQYs6wjm9UTKER3AAF -n /home/dev/aws/sites/casamento/ s3://casamento-mundoinesquecivel/

	s3_main_sync $KEY $SECRET $PATH $S3NAME
}

3R_rds_backup() {
	
	local $DB_NAME=$1 
	local $FILE=$2

	rds_backup $DB_USER $DB_PASSWORD $DB_HOST $DB_NAME $FILE
}

3R_rds_restore() {
	
	local $DB_NAME=$1 
	local $FILE=$2

	rds_restore $DB_USER $DB_PASSWORD $DB_HOST $DB_NAME $FILE
}


main() {

	local CMD=$1
	local ACCOUNT=$2

	case "$CMD" in
	    rds_restore)
			`$ACCOUNT_rds_restore`
			;;
	    rds_backup)
			`$ACCOUNT_rds_backup`
			;;
		ec2_main_sync)
			`$ACCOUNT_ec2_main_sync`
			;;
		s3_main_sync)
			`$ACCOUNT_s3_main_sync`
			;;
	esac
}

main