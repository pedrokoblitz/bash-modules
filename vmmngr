# virtual servers

gitbox_sync_upload() {

	local DIRECTION="download"
	
	local LOCAL_PATH=$HOME"/projects/"$PROJECT_NAME
	local LOCAL_FILE=""
	
	local PROJECT_NAME=$1

	local REMOTE_PATH=$2
	local REMOTE_FILE="*"
	local REMOTE_USER="ubuntu"
	local REMOTE_ADDRESS="192.168.1.117"

	ssh_ssh $LOCAL_PATH$PROJECT_NAME/$LOCAL_FILE $REMOTE_USER@$REMOTE_ADDRESS:$REMOTE_PATH$PROJECT_NAME/$REMOTE_FILE
}

gitbox_sync_download() {

	local DIRECTION="download"
	
	local LOCAL_PATH=$HOME"/projects/"$PROJECT_NAME
	local LOCAL_FILE="*"
	
	local PROJECT_NAME=$1

	local REMOTE_PATH=$2
	local REMOTE_FILE=""
	local REMOTE_USER="ubuntu"
	local REMOTE_ADDRESS="192.168.1.117"

	ssh_ssh $REMOTE_USER@$REMOTE_ADDRESS:$REMOTE_PATH$PROJECT_NAME/$REMOTE_FILE $LOCAL_PATH$PROJECT_NAME/$LOCAL_FILE
}

gitbox_sync_download_deck() {

	local PROJECT_NAME="deck"
	local REMOTE_PATH="/domains/"$PROJECT_NAME"/html/"

	gitbox_sync_download $PROJECT_NAME $REMOTE_PATH
}

gitbox_sync_upload_deck() {

	local PROJECT_NAME="deck"
	local REMOTE_PATH="/domains/"$PROJECT_NAME"/html/"

	gitbox_sync_upload $PROJECT_NAME $REMOTE_PATH
}



